<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShowSimpleAlertDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Simple Alert Dialog"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSample" />

    <Button
        android:id="@+id/btnShowMaterialAlertDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Material Alert Dialog"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowSimpleAlertDialog" />

    <Button
        android:id="@+id/btnShowDatePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Date Picker"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowMaterialAlertDialog" />

    <Button
        android:id="@+id/btnShowTimePicker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Time Picker"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowDatePicker" />

        <Button
        android:id="@+id/btnPickImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick Image"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowTimePicker" />

</androidx.constraintlayout.widget.ConstraintLayout>